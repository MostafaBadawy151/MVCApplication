@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.Count()>0)
{
    <a asp-action="Create" class="btn btn-success mb-3">Add New Role</a>
    <br />
    <form asp-action="Index" class="w-50 d-flex">
        <input type="text" name="SearchValue" placeholder="Employee's Name" class="form-control mr-2">

        <input type="submit" value="Search" class="btn btn-primary">

    </form>
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(R=>R.Id)</td>
                <td>@Html.DisplayNameFor(R=>R.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach(var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>
                    
                    <partial name ="_ButtonsPartialView" model="@Role.Id">
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>There Is No Roles</div>
}
